from model.aiModel import get_response

import tkinter as tk
from tkinter import ttk, filedialog

def upload_files():
    print("Upload Files button clicked")

def grade_selected():
    print("Grade Selected button clicked")

def grade_all():
    print("Grade All button clicked")

def export_selected():
    print("Export Selected button clicked")

def export_all():
    print("Export All button clicked")

root = tk.Tk()
root.title("Schrodinger’s Solution")
root.geometry("600x500")

# Title Label
title_label = tk.Label(root, text="Schrodinger’s Solution", font=("Arial", 16, "bold"))
title_label.pack(pady=10)

# Upload Button
upload_btn = tk.Button(root, text="Upload Files", command=upload_files)
upload_btn.pack(pady=5)

# Sorting Options
sort_frame = tk.Frame(root)
sort_frame.pack()
sort_label = tk.Label(sort_frame, text="Sort by: ")
sort_label.pack(side=tk.LEFT)
sort_options = ttk.Combobox(sort_frame, values=["Name (A-Z)", "ID Number (0-9)"])
sort_options.pack(side=tk.LEFT)
sort_options.current(0)

# Student Requirements Textbox
student_requirements = tk.Text(root, height=4, width=50)
student_requirements.pack(pady=10)

# Grading Buttons
grade_selected_btn = tk.Button(root, text="Grade Selected", command=grade_selected, bg="green", fg="white")
grade_selected_btn.pack(pady=5)
grade_all_btn = tk.Button(root, text="Grade All", command=grade_all, bg="green", fg="white")
grade_all_btn.pack(pady=5)

# Output Section
output_label = tk.Label(root, text="Output")
output_label.pack(pady=10)

# Export Buttons
export_selected_btn = tk.Button(root, text="Export Selected", command=export_selected, bg="red", fg="white")
export_selected_btn.pack(pady=5)
export_all_btn = tk.Button(root, text="Export All", command=export_all, bg="red", fg="white")
export_all_btn.pack(pady=5)

root.mainloop()
